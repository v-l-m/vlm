<?xml version="1.0" encoding="utf-8" ?>
<acces-policy>
 <cross-domain-acces>
   <policy>
     <allow-from http-request-headers="*">
       <domain uri="*"/>
     </allow-from>
     <grant-to>
       <ressource include-subpaths="true" path="/"/>
     </grant-to>
   </policy>
 </cross-domain-acces>
</acces-policy>
